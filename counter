module upcount (R, Reset_bar, Clock, E, L, Q); 
parameter n=2;
input [n-1:0] R; 
input Reset_bar, Clock, E, L; 
output reg [n-1:0] Q;
reg [22:0]clock_div=0;
reg use_clock;
always@(posedge Clock)
begin 
	clock_div<=clock_div+1;
	use_clock<=clock_div[22];
end
always @(posedge use_clock) 
	if (!Reset_bar) Q <= 0; 
	else if (L) Q <= R; 
	else if (E) Q <= Q + 1;
endmodule


