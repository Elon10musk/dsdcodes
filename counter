//Random Sequence Generator 0--> 1 --> 2 -->4 --> 8 --> 3 --> 5 --> 6 --> 9 --> 10 --> 12 and repeat
module Random_seq (R, Resetn, Clock, E, Q); 
input [3:0] R; 
input Resetn, Clock, E; 
output reg [3:0] Q;
always @(negedge Resetn, posedge Clock)
	if(!Resetn) Q=R;
	else if(E)
		case(Q)
			4'd0 : Q=4'd1;
			4'd1 : Q=4'd2;
			4'd2 : Q=4'd4;
			4'd4 : Q=4'd8;
			4'd8 : Q=4'd3;
			4'd3 : Q=4'd5;
			4'd5 : Q=4'd6;
			4'd6 : Q=4'd9;
			4'd9 : Q=4'd10;
			4'd10 : Q=4'd1;
			4'd12 : Q=4'd0;
		endcase
endmodule

module BCD_count(Clock, Clear, E, BCD);
input Clock, Clear, E;
output reg [3:0]BCD;
always @(posedge Clock) 
begin 
	if (Clear) BCD <= 0; 
	else if (E) 
			if (BCD == 4'b1001) BCD <= 0; 
			else BCD <= BCD + 1; 
end
endmodule

